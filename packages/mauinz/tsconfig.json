{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "es5",
    "lib": [
      "es5", 
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src"]
}
