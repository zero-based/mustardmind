{
  "name": "@mustardmind/server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn gen && tsc",
    "gen": "yarn gen:prisma && yarn gen:nexus",
    "gen:prisma": "prisma generate",
    "gen:nexus": "ts-node --transpile-only src/schema",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server"
  },
  "dependencies": {
    "@prisma/client": "2.15.0",
    "apollo-server": "2.19.2",
    "graphql": "15.5.0",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "0.29.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.15.0",
    "@types/node": "12.19.15",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.3"
  }
}
